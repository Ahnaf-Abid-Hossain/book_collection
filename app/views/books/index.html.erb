<h1>Books</h1>
<h1>test2</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <!--
      <th>Author</th>
      <th>Price</th>
      <th>Published Date</th>
      <th colspan="3"></th>
      -->
    </tr>
  </thead>

  <tbody>
  <% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <!--
        <td><%= book.author %></td>
        <td><%= number_to_currency(book.price) %></td>
        <td><%= book.published_date %></td>
        -->
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Delete', delete_book_path(book), class: 'action delete', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

